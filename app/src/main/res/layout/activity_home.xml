                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:padding="3dip" />
            <android.support.v7.widget.CardView
                android:text="Hello 2"
                android:layout_height="150dp"
                android:layout_width="150dp"
